<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleColor="@color/ripple_color"
    app:mrl_rippleOverlay="true">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_3"
        android:clickable="true"
        app:cardBackgroundColor="?attr/colorAccent"
        app:cardCornerRadius="@dimen/dp_0"
        app:cardElevation="@dimen/dp_3"
        app:cardUseCompatPadding="true">
        <!--android:foreground="@drawable/card_foreground"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    tools:src="@drawable/avril" />

                <org.lvu.customize.CircleProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:background_color="@color/videoViewBBG"
                    app:enable_circle_background="true"
                    app:inner_radius="@dimen/dp_12"
                    app:progress_color="@android:color/white" />
            </FrameLayout>

            <org.lvu.customize.ScrollingTextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="?attr/colorAccent"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/dp_4"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/menu_text_color"
                android:textSize="@dimen/sp_17"
                tools:text="“蒜你狠”卷土重来 每斤价格直逼20元" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.balysv.materialripple.MaterialRippleLayout>