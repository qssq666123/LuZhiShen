        <item name="color_light">@color/light_deepOrange</item>
        <item name="menu_selector">@drawable/menu_item_selector_orange</item>
        <item name="alertDialogTheme">@style/DialogTheme.Deep_Orange</item>
    </style>

    <style name="AppTheme.Green" parent="AppTheme.Base">
        <item name="colorPrimary">@color/greenPrimary</item>
        <item name="colorPrimaryDark">@color/greenPrimaryDark</item>
        <item name="colorAccent">@color/greenAccent</item>
