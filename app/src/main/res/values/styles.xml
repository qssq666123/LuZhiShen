    <style name="DialogTheme.Deep_Orange" parent="BaseDialogTheme">
        <item name="colorAccent">@color/deepOrangeAccent</item>
    </style>

    <style name="DialogTheme.Green" parent="BaseDialogTheme">
        <item name="colorAccent">@color/greenAccent</item>
    </style>

    <style name="DialogTheme.Brown" parent="BaseDialogTheme">
        <item name="colorAccent">@color/brownAccent</item>
    </style>

    <style name="DialogTheme.Pink" parent="BaseDialogTheme">
        <item name="colorAccent">@color/pinkAccent</item>
    </style>

    <style name="DialogTheme.Teal" parent="BaseDialogTheme">
        <item name="colorAccent">@color/tealAccent</item>
    </style>

    <style name="DialogTheme.Grey" parent="BaseDialogTheme">
        <item name="colorAccent">@color/greyAccent</item>
    </style>

    <style name="DialogTheme.Dark" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/darkAccent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
