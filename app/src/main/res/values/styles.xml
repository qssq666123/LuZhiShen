<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/bluePrimaryDark</item>
        <item name="colorAccent">@color/blueAccent</item>
    </style>

    <style name="AppTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="CustomDialogTheme2" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="AppTheme.Black" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/blackPrimary</item>
        <item name="colorPrimaryDark">@color/blackPrimaryDark</item>
        <item name="colorAccent">@color/blackAccent</item>
        <item name="menu_selector">@drawable/menu_item_selector_black</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="AppTheme.Red" parent="AppTheme.Base">
