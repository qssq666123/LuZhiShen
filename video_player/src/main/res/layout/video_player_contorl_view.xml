<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:background="#90424242"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.demo.exoplayertest.ScrollingTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="4dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            tools:text="“蒜你狠”卷土重来 每斤价格直逼20元" />
    </LinearLayout>


    <TextView
        android:id="@+id/seek_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#90424242"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:visibility="invisible"
        tools:text="+ 5:13" />

    <LinearLayout
        android:id="@+id/control_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#90424242"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="2dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:maxHeight="2dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:progressDrawable="@drawable/progress_drawable"
            android:thumb="@drawable/progress_thumb"
            tools:max="100"
            tools:progress="40"
            tools:secondaryProgress="70" />

        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/download_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="6dp"
            android:src="@drawable/ic_download" />

        <ImageView
            android:id="@+id/fullscreen_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="6dp"
            android:src="@drawable/ic_fullscreen" />
    </LinearLayout>

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:padding="4dp"
        android:src="@drawable/ic_play" />

    <ImageView
        android:id="@+id/pause_button"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:padding="4dp"
        android:src="@drawable/ic_pause" />

    <com.demo.exoplayertest.CircleProgressBar
        android:id="@+id/loading_bar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:enable_circle_background="false"
        app:inner_radius="16dp"
        app:progress_color="@android:color/white" />

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/bottom_progress"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:max="100"
        android:progressDrawable="@drawable/progress_drawable"
        android:visibility="invisible"
        tools:progress="50" />

</RelativeLayout>